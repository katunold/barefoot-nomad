{
  "name": "barefoot-nomad-backend",
  "version": "1.0.0",
  "description": "A platform to make company global travel and accommodation easy and convenient for the strong workforce of savvy members of staff, by leveraging the modern web.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node ./dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
    "test": "NODE_ENV=test nyc mocha --require @babel/register --exit",
    "coverage": "npm run test && nyc report --reporter=text-lcov | coveralls",
    "migrations": "sequelize db:migrate",
    "build": "babel ./src --out-dir dist --ignore ./node_modules",
    "lint": "eslint .",
    "reset-db": "sequelize db:drop && sequelize db:create"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katunold/barefoot-nomad.git"
  },
  "author": "Arnold Katumba",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katunold/barefoot-nomad/issues"
  },
  "homepage": "https://github.com/andela/blackninjas-backend#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "pd": "^0.8.1",
    "pg": "^7.14.0",
    "sequelize": "^5.21.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.9.1",
    "nyc": "^14.1.1",
    "sequelize-cli": "^5.5.1"
  }
}
