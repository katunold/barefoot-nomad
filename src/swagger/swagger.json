        },
        "tags": [
          "User"
        ]
      }
    }
  },
  "parameters": {
    "register": {
      "in": "body",
      "name": "Resend",
      "description": "User sign-up",
      "schema": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "email",
          "password"
        ],
        "properties": {
          "firstName": {
            "type": "string",
            "default": false
          },
          "lastName": {
            "type": "string",
            "default": false
          },
          "email": {
            "type": "string",
            "default": false
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 8
          }
        },
        "example": {
          "firstName": "test",
          "lastName": "client",
          "email": "testclient@mail.com",
          "password": "1qaz2wsx"
        }
      }
    },
    "resend": {
      "in": "body",
      "name": "Resend",
      "description": "Resend verification email",
      "schema": {
        "type": "object",
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "default": false
          }
        },
        "example": {
          "email": "testclient@mail.com"
        }
      }
    },
    "login": {
      "in": "body",
      "name": "Login",
      "description": "Login user",
      "schema": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "default": false
          },
          "password": {
            "type": "string",
            "default": false
          }
        },
        "example": {
          "email": "testclient@mail.com",
          "password": "1qaz2wsx"
        }
      }
    },
    "reset-password": {
      "in": "body",
      "name": "Reset Password",
      "description": "Request for a password reset",
      "schema": {
        "type": "object",
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "default": false
          }
        },
        "example": {
          "email": "testclient@mail.com"
        }
      }
    },
    "new-password": {
      "in": "body",
      "name": "Set new password",
      "description": "Set a new password",
      "schema": {
        "type": "object",
        "required": [
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "default": false
          }
        },
        "example": {
          "password": "1qaz2wsx"
        }
      }
    },
    "google": {
      "in": "body",
      "name": "Sign-up/login with google",
      "description": "User social auth using google",
      "schema": {
        "type": "object",
        "required": [
          "access_token"
        ],
        "properties": {
          "access_token": {
            "type": "string"
          }
        },
        "example": {
          "access_token": "yfuetglqyuiewlfu;38oeiwruf;yiqerulgfyuertekwuygfqegwfgkqt4t4t6i78i96ol"
        }
      }
    },
    "facebook": {
      "in": "body",
      "name": "Sign-up/login with facebook",
      "description": "User social auth using facebook",
      "schema": {
        "type": "object",
        "required": [
          "access_token"
        ],
        "properties": {
          "access_token": {
            "type": "string"
          }
        },
        "example": {
          "access_token": "yfuetglqyuiewlfu;38oeiwruf;yiqerulgfyuertekwuygfqegwfgkqt4t4t6i78i96ol"
        }
